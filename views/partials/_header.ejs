              <table>
                <thead>
                  <tr>
                    <th style="width:50%">Product</th>
                    <th style="width:11%">Price</th>
                    <th style="width:14%">Quantity</th>
                    <th style="width:22%">Subtotal</th>
                    <th style="width:10%"></th>
                  </tr>
                </thead>
                <tbody  id="shopping_cart">
                    <!-- Items get added to shopping cart -->
                </tbody>
                <tfoot>

                  <tr>
                    <td><!--Empty box to align the cart--></td>
                    <td colspan="2" class="hidden-xs"></td>
                    <td class="hidden-xs total-price"><strong>Total $<span id="total">0.00</span> </strong></td>
                    <td><a href="/confirmation" class="btn btn-outline-success">Order</a></td>
                  </tr>
                </tfoot>
              </table>
              </div>
